<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardElevation="10dp"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/black"
        app:cardCornerRadius="50dp"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:src="@drawable/admin_ad"
            />

    </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="15dp"
            app:cardBackgroundColor="#F5F5F5"
            app:cardCornerRadius="20dp"
            android:elevation="10dp"
            app:cardElevation="10dp"
            >
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       >
       <androidx.cardview.widget.CardView
           android:layout_width="150dp"
           android:id="@+id/container_1"
           android:layout_height="100dp"
           android:layout_marginEnd="15dp"
           android:layout_marginStart="30dp"
           android:layout_marginTop="30dp"
           android:layout_marginBottom="15dp"
           app:cardBackgroundColor="#F5F5F5"
           app:cardCornerRadius="20dp"
           android:elevation="10dp"
           app:cardElevation="10dp"
           />

       <androidx.cardview.widget.CardView
           android:layout_width="150dp"
           android:id="@+id/container_2"
           android:layout_toRightOf="@id/container_1"
           android:layout_height="100dp"
           android:layout_marginEnd="15dp"
           android:layout_marginStart="15dp"
           android:layout_marginTop="30dp"
           android:layout_marginBottom="15dp"
           app:cardBackgroundColor="#F5F5F5"
           app:cardCornerRadius="20dp"
           android:elevation="10dp"
           app:cardElevation="10dp"
           />
       <androidx.cardview.widget.CardView
           android:layout_width="150dp"
           android:id="@+id/container_3"
           android:layout_below="@id/container_1"
           android:layout_height="100dp"
           android:layout_marginEnd="15dp"
           android:layout_marginStart="30dp"
           android:layout_marginTop="30dp"
           android:layout_marginBottom="15dp"
           app:cardBackgroundColor="#F5F5F5"
           app:cardCornerRadius="20dp"
           android:elevation="10dp"
           app:cardElevation="10dp"
           />
       <androidx.cardview.widget.CardView
           android:layout_width="150dp"
           android:id="@+id/container_4"
           android:layout_below="@id/container_2"
           android:layout_toRightOf="@id/container_3"
           android:layout_height="100dp"
           android:layout_marginEnd="15dp"
           android:layout_marginStart="15dp"
           android:layout_marginTop="30dp"
           android:layout_marginBottom="15dp"
           app:cardBackgroundColor="#F5F5F5"
           app:cardCornerRadius="20dp"
           android:elevation="10dp"
           app:cardElevation="10dp"
           />

   </RelativeLayout>


        </androidx.cardview.widget.CardView>



</LinearLayout>
